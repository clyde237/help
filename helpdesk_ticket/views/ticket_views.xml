<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_helpdesk_ticket_form" model="ir.ui.view">
        <field name="name">helpdesk.ticket.form</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <form string="Ticket d’assistance">
                <sheet>
                    <header>
                        <button name="action_set_in_progress"
                                type="object"
                                string="Démarrer"
                                class="btn-primary"
                                invisible="state != 'new'"/>

                        <button name="action_set_waiting"
                                type="object"
                                string="Mettre en attente"
                                class="btn-secondary"
                                invisible="state != 'in_progress'"/>

                        <button name="action_set_solved"
                                type="object"
                                string="Résoudre"
                                class="btn-success"
                                invisible="state not in ['in_progress', 'waiting']"/>

                        <button name="action_set_closed"
                                type="object"
                                string="Clôturer"
                                class="btn-danger"
                                invisible="state not in ['solved', 'waiting']"/>

                        <button name="action_reset_to_new"
                                type="object"
                                string="Réinitialiser"
                                class="btn-secondary"
                                invisible="state != 'closed'"/>

                        <button name="print_ticket_pdf"
                                type="object"
                                string="Imprimer le Ticket"
                                class="btn-primary"
                                context="{'report_name': 'helpdesk_ticket.report_ticket_status'}"
                                invisible="state != 'closed'"/>
                        <field name="state" widget="statusbar"
                               statusbar_visible="new,in_progress,waiting,solved,closed"/>
                    </header>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="priority"/>
                        <field name="subject"/>
                        <field name="partner_id"/>
                        <field name="user_id"/>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="Activités">
                            <field name="activity_ids"/>
                        </page>
                    </notebook>
                </sheet>
                <!--                ajoute le chatter dans le formulaire-->
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_helpdesk_ticket_tree" model="ir.ui.view">
        <field name="name">helpdesk.ticket.tree</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <tree string="Tickets">
                <field name="name"/>
                <field name="subject"/>
                <field name="partner_id"/>
                <field name="user_id"/>
                <field name="state"/>
                <field name="priority"/>
            </tree>
        </field>
    </record>

    <record id="view_helpdesk_ticket_kanban" model="ir.ui.view">
        <field name="name">helpdesk.ticket.kanban</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column" default_group_by="state">
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <strong>
                                <field name="name"/>
                            </strong>
                            <br/>
                            <field name="subject"/>
                            <br/>
                            <field name="partner_id"/>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
